<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_invoice_date_wizard_form_view" model="ir.ui.view">
            <field name="name">update.invoice.date.wizard.form</field>
            <field name="model">update.invoice.date.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="invoice_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_update_dates" string="Aplicar Fecha" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>